            "description": "Operations about student"
        },
        {
            "name": "Classroom",
            "description": "Operations about classroom"
        }
    ],
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string",
                        "example": "Joe"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "admin@admin.com"
                    },
                    "email_verified_at": {
                        "type": "string",
                        "format": "datetime",
                        "example": "2023-01-01T00:00:00.000000Z"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "datetime",
                        "example": "2023-01-01T00:00:00.000000Z"
                    },
                    "update_at": {
                        "type": "string",
                        "format": "datetime",
                        "example": "2023-01-01T00:00:00.000000Z"
                    }
                }
            },
            "School": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "inep": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "uf": {
                        "type": "string"
                    },
                    "city": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "datetime",
                        "example": "2023-01-01T00:00:00.000000Z"
                    },
                    "update_at": {
                        "type": "string",
                        "format": "datetime",
                        "example": "2023-01-01T00:00:00.000000Z"
                    },
                    "deleted_at": {
                        "type": "string",
                        "format": "datetime",
                        "example": "2023-01-01T00:00:00.000000Z"
                    }
                }
            },
            "Student": {
                "type": "object",
                "required": [
                    "name",
                    "birth_date",
                    "responsible_name"
                ],
                "properties": {
                    "school_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string"
                    },
                    "birth_date": {
                        "type": "string",
                        "format": "date",
                        "example": "2023-01-01"
                    },
                    "responsible_name": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "datetime",
                        "example": "2023-01-01T00:00:00.000000Z"
                    },
                    "update_at": {
                        "type": "string",
                        "format": "datetime",
                        "example": "2023-01-01T00:00:00.000000Z"
                    },
                    "deleted_at": {
                        "type": "string",
                        "format": "datetime",
                        "example": "2023-01-01T00:00:00.000000Z"
                    }
                }
            },
            "StudentWithRelations": {
                "type": "object",
                "required": [
                    "name",
                    "birth_date",
                    "responsible_name"
                ],
                "properties": {
                    "school_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string"
                    },
                    "birth_date": {
                        "type": "string",
                        "format": "date",
                        "example": "2023-01-01"
                    },
                    "responsible_name": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "datetime",
                        "example": "2023-01-01T00:00:00.000000Z"
                    },
                    "update_at": {
                        "type": "string",
                        "format": "datetime",
                        "example": "2023-01-01T00:00:00.000000Z"
                    },
                    "deleted_at": {
                        "type": "string",
                        "format": "datetime",
                        "example": "2023-01-01T00:00:00.000000Z"
                    },
                    "pivot": {
                        "type": "object",
                        "properties": {
                            "classroom_id": {
                                "type": "integer",
                                "example": 1
                            },
                            "student_id": {
                                "type": "integer",
                                "example": 1
                            }
                        }
                    }
                }
            },
            "Classroom": {
                "type": "object",
                "required": [
                    "codigo",
                    "responsavel",
                    "escola",
                    "alunos"
                ],
                "properties": {
                    "codigo": {
                        "type": "string",
                        "example": "1TA10"
                    },
                    "responsavel": {
                        "type": "integer",
                        "example": 1
                    },
                    "escola": {
                        "type": "integer",
                        "example": 1
                    },
                    "alunos": {
                        "type": "array",
                        "items": {
                            "type": "array",
                            "example": [
                                1,
                                2,
                                3
                            ]
                        }
                    },
                    "created_at": {
                        "type": "string",
                        "format": "datetime",
                        "example": "2023-01-01T00:00:00.000000Z"
                    },
                    "update_at": {
                        "type": "string",
                        "format": "datetime",
                        "example": "2023-01-01T00:00:00.000000Z"
                    },
                    "deleted_at": {
                        "type": "string",
                        "format": "datetime",
                        "example": "2023-01-01T00:00:00.000000Z"
                    }
                }
            },
            "Success": {
                "type": "object",
                "required": [
                    "message"
                ],
                "properties": {
                    "message": {
                        "type": "string"
                    },
                    "id": {
                        "type": "integer"
                    }
                }
            },
            "Error": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string"
                    }
                }
            },
            "ValidationError": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string"
                    },
                    "messages": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "auth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "paths": {
        "/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Authenticate the user",
                "description": "Authenticates the user and retrieve a token",
                "operationId": "authenticate",
                "requestBody": {
                    "description": "User to be authenticated",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "admin@admin.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "User or password mismatches",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Returns user",
                "description": "Returns current user",
                "operationId": "getUser",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error retrieving the user"
                    }
                },
                "security": [
                    {
                        "auth": []
                    }
                ]
            }
        },
        "/escolas": {
            "get": {
                "tags": [
                    "School"
                ],
                "summary": "Returns a list of schools",
                "description": "Returns a list of schools which the user has association",
                "operationId": "getSchools",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/School"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "School not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "auth": []
                    }
                ]
            }
        },
        "/escolas/{id}/alunos": {
            "get": {
                "tags": [
                    "School"
                ],
                "summary": "Returns a list of students by school",
                "description": "Returns a list of students which the school has association",
                "operationId": "getStudentsBySchool",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of school to fetch",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Student"
                                    }
                                }
                            }
                        }
                    },
                    "204": {
                        "description": "Successful response with no result"
                    }
                },
                "security": [
                    {
                        "auth": []
                    }
                ]
            }
        },
        "/alunos": {
            "post": {
                "tags": [
                    "Student"
                ],
                "summary": "Creates a new student",
                "description": "Creates a new student and optionally assign to a school",
                "operationId": "createStudent",
                "requestBody": {
                    "description": "Student to add",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
